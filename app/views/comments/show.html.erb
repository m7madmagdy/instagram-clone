<div class="post-container">

  <p style="color: green"><%= notice %></p>

  <%= render @comment, class: "col-12" %>

  <div >
    <%= link_to "Edit this comment", edit_comment_path(@comment), class: "btn btn-success col-12" %>
    <%= button_to "Destroy this comment", @comment, method: :delete, class: "btn btn-danger col-12", style: "margin-top: 10px;" %>
    <%= link_to "Back to comments", comments_path, class: "btn btn-secondary col-12", style: "margin-top: 10px;" %>
  </div>

</div>