<div id="<%= dom_id comment %>" class="post-container">

  <p>
    <strong>Text:</strong>
    <%= comment.text %>
  </p>

  <p>
    <strong>User:</strong>
    <%= comment.user_id %>
  </p>

  <p>
    <strong>Post:</strong>
    <%= comment.post_id %>
  </p>
  <p>
    <%= link_to "", comment, class: "post-link" %>
  </p>
</div>
