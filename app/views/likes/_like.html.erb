<div id="<%= dom_id @post %>" class="post-container">
  <% if like.user.avatars.empty? %>
    <img src="https://i.imgur.com/9nMvJ1e.png" class="rounded-circle" style="width: 120px; height: 120px"/>
  <% else %>
    <% like.user.avatars.each do |av| %>
      <img src="<%= av.avatar_url %>" class="rounded-circle" style="width: 120px; height: 120px"/>
    <% end %>
  <% end %>

  <%= link_to(like.user, class: "post-link") do %>
    <h5 class= "text-dark", style="margin-top: 20px;"> <%= like.user.username %> </h5>
  <% end %>
</div>

