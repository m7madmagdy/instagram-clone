<div class="row">
  <div class="col-12 text-center" style="padding: 20px; background-color: #f2f2f2;">

      <div class="post-link">
        <%= link_to(user, class:"post-link") do%>
          <% user.avatars.each do |av| %>
            <img src="<%= av.avatar_url %>" class="rounded-circle" style="width: 130px; height: 130px" />
          <% end %>
        <%end%>
      </div>

      <div class="post-link">
        <%= link_to(user, class: "text-dark post-link", style: "text-decoration: none;") do%>
        <h4 style="margin-top: 10px;">
          <%=user.username %>
        </h4>
      <% end %>
    </div>
    <div>
    </div>
    <h6> <%= user.followers.count %> Followers </h6>
    <h6> <%= user.following.count %> Following </h6>
    <% if user_signed_in? %>
      <% if current_user.following?(user) %>
        <%= button_to "Unfollow", unfollow_path(user), class: "btn btn-outline-danger" %>
      <% elsif current_user.sent_follow_request_to?(user) %>
        <%= button_to "Cancel follow request", cancel_path(user), class: "btn btn-outline-danger" %>
      <% end %>
    <% end %>
  </div>
</div>