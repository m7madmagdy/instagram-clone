<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="col-14">
  <div class="main-box clearfix">
    <div class="table-responsive">
      <table class="table user-list">
        <thead>
        <tr>
          <th><span>User</span></th>
          <th><span>Created</span></th>
          <th><span>Email</span></th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td class="post-link">
              <% if user.avatars.empty?%>
                <img src="https://i.imgur.com/9nMvJ1e.png" class="rounded-circle" style="width: 50px; height: 50px"/>
              <% else %>
                <% user.avatars.each do |av| %>
                  <img src="<%= av.avatar_url %>" class="rounded-circle" style="width: 50px; height: 50px"/>
                <% end %>
              <% end %>

              <%= link_to(user, class: "post-link") do%>
                <h4 class="nav-link text-dark">
                  <strong><%= user.username %></strong>
                </h4>
              <% end %>
            </td>
            <td>
              <%= user.created_at %>
            </td>
            <td>
             <strong class="text-primary"><%= user.email %></strong>
            </td>
            <td style="width: 20%;">
              <%= button_to(user, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger") do %>
                <i class="fa fa-trash"></i>
                <span class="ms-1 d-none d-sm-inline"><strong>Delete User</strong></span>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

