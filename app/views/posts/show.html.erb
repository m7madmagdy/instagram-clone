<p style="color: green"><%= notice %></p>

<%= render @post %>

<div style="margin: 20px;">
  <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-success col-1" %>  
  <%= link_to "Back to posts", posts_path, class: "btn btn-secondary col-1" %>

  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger col-2", style: "margin-top: 10px;" %>
</div>
